<%- include('include/_header')%>
<div class="new_blog_container">
    <div class="form-container">
        <form enctype="multipart/form-data" method="POST" id="update-blog">
            
        <div class="new_blog">
            <div class="form-group">
                <label for="name" class="">Blog Title</label>
                <input type="hidden" name="id" value="<%= blog._id%>">
                <input type="text" name="title" id="" placeholder="Enter your blog title here!" value="<%= blog.title%>">
            </div>

            <div class="form-group">
                <label for="blogimage">Blog Image</label>
                <input type="file" name="image" id="" value="<%= blog.image%>" onchange="readURL(this)" accept="image/*">
            </div>

            <div class="form-group">
                <label for="content" class="">Blog Content</label>
                <textarea name="description" id="" cols="33" rows="15" placeholder="Tell us about your Blog!">
                <%= blog.description%>
                </textarea>
            </div>

            <div class="buttons">
                
                    <button type="submit" class="form-button">Upload Your Blog!</button>
                
               
                    <a href="/" class="form-cancel-button">Cancel</a>
               
            </div>
        </div>
 
        </form>
    </div>
</div>
<%- include('include/_footer')%>
